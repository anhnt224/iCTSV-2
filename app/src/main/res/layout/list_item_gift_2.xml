<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="gift"
                type="com.bk.ctsv.models.entity.gift.Gift" />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/border_pink"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@{gift.name}"
                    android:textColor="@color/textColorPrimary"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_person_outline_24"
                        app:tint="@color/textColorPrimaryLight" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@{gift.contactPerson}"
                        android:textColor="@color/textColorPrimaryLight" />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{gift.description}"
                    android:maxLines="3"
                    android:textColor="@color/textColorPrimaryLight"
                    android:textSize="14sp" />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_receive_gift" />

                    <TextView
                            android:id="@+id/tvQuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <TextView
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@color/iron"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"/>

                <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:tint="#E1B000"
                            android:src="@drawable/ic_group"/>
                    <TextView
                            android:id="@+id/tvQuanRegister"
                            android:textSize="14sp"
                            android:layout_marginStart="3dp"
                            android:textColor="@color/textColorPrimary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>