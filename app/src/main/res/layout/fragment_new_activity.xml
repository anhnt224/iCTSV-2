            <!--</View>-->
            <RelativeLayout

                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView

                        android:src="@mipmap/ic_location_grey"
                        android:layout_centerVertical="true"
                        android:id="@+id/imgLocation"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                <EditText
                        android:textSize="16sp"
                        android:id="@+id/edtAPlace"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:hint="@string/add_location"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:layout_toRightOf="@+id/imgLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack" />
            </RelativeLayout>

            <View

                    android:id="@+id/view2"
                    android:background="@color/iron"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

            </View>

            <RelativeLayout

                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView

                        android:src="@mipmap/ic_note_grey"
                        android:layout_centerVertical="true"
                        android:id="@+id/imgNote"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                <EditText
                        android:textSize="16sp"
                        android:id="@+id/edtADesc"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:hint="@string/add_desc"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:layout_toRightOf="@+id/imgNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack" />
            </RelativeLayout>
            <View
                    android:id="@+id/view3"
                    android:background="@color/iron"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
            </View>

            <RelativeLayout
                    android:paddingRight="16dp"
                    android:id="@+id/relativeTime"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView

                        android:src="@mipmap/ic_time_grey"
                        android:layout_centerVertical="true"
                        android:id="@+id/imgTime"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                <TextView
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:text="Thời gian"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:layout_toRightOf="@+id/imgTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack" />

            </RelativeLayout>

            <RelativeLayout
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/imgTime2"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                <TextView
                        android:textSize="14sp"
                        android:id="@+id/txtDayStart"
                        android:layout_centerVertical="true"
                        android:text="31-3-2019"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:layout_toRightOf="@+id/imgTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack" />
                <TextView
                        android:textSize="14sp"
                        android:id="@+id/txtHoursStart"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/colorBlack"
                        android:text="00:00"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/imgTime3"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                <TextView
                        android:textSize="14sp"
                        android:id="@+id/txtDayEnd"
                        android:layout_centerVertical="true"
                        android:text="31-3-2019"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:layout_toRightOf="@+id/imgTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack" />
                <TextView
                        android:textSize="14sp"
                        android:id="@+id/txtHoursEnd"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/colorBlack"
                        android:text="23:59"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                    android:id="@+id/view4"

                    android:background="@color/iron"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
            </View>

