            <RelativeLayout

                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"

                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView

                        android:src="@mipmap/ic_notifi_grey"
                        android:layout_centerVertical="true"
                        android:id="@+id/imgNotifi"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                <TextView
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:text="Loại hoạt động"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:layout_toRightOf="@+id/imgNotifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:paddingLeft="16dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_marginBottom="12dp"
                    tools:listitem="@layout/list_item_activity_group_by_new_sv_group"
                    android:id="@+id/listActivityGroupRecycler"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <View
                    android:background="@color/iron"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
            </View>



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>