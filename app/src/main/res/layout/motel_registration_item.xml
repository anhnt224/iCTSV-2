<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="motelRegistraion"
                type="com.bk.ctsv.modules.searchMotel.model.MotelRegistration" />
        <variable
                name="status"
                type="com.bk.ctsv.modules.searchMotel.model.MotelRegistrationStatus" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/ink200"
                app:strokeWidth="1dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/search_motel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:id="@+id/textView21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:text="@{motelRegistraion.address}"
                        android:textColor="@color/ink500"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView16"
                        app:layout_constraintTop_toTopOf="@+id/imageView16" />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView21"
                        app:layout_constraintStart_toStartOf="@+id/textView21"
                        app:layout_constraintTop_toBottomOf="@+id/textView21">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                                android:id="@+id/statusCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/ink200"
                                app:cardCornerRadius="4dp"
                                app:cardElevation="0dp">

                            <TextView
                                    android:id="@+id/statusText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="2dp"
                                    android:text="@{status.description}"
                                    android:textSize="12sp" />
                        </com.google.android.material.card.MaterialCardView>
                        <TextView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:text="@{motelRegistraion.createdTimeStr}"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="@color/blue300"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{motelRegistraion.type}"
                                android:textSize="14sp"
                                android:textColor="@color/ink450"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="@color/blue300"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{motelRegistraion.numberOfPeopleStr}"
                                android:textSize="14sp"
                                android:textColor="@color/ink450"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="@color/blue300"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{motelRegistraion.priceStr}"
                                android:textSize="14sp"
                                android:textColor="@color/ink450"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="@color/blue300"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{motelRegistraion.userRequests}"
                                android:textSize="14sp"
                                android:textColor="@color/ink450"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>